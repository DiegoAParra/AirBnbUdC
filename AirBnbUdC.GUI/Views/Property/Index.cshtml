@model IEnumerable<AirBnbUdC.GUI.Models.Parameters.PropertyModel>

@{
    ViewBag.Title = "Index";
}

<h2>Propiedades</h2>
<br />
<a target="_blank" href="/Property/GenerateReport?format=PDF" class="btn btn-success">Generar Reporte<i class="fas fa-file"></i></a>
<p>
    @Html.ActionLink("Create New", "Create", null, new { @Class = "btn btn-primary mt-5 mb-3" })
</p>

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-4 mb-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">@Html.DisplayFor(modelItem => item.City.Name) - @Html.DisplayFor(modelItem => item.PropertyAddress)</h5>
                    <p class="card-text"><strong>Capacidad :</strong> @Html.DisplayFor(modelItem => item.CustomerAmount) Personas</p>
                    <p class="card-text"><strong>Precio:</strong> @Html.DisplayFor(modelItem => item.Price) $</p>
                    <p class="card-text"><strong>Coordenadas:</strong> @Html.DisplayFor(modelItem => item.Latitude), @Html.DisplayFor(modelItem => item.Longitude)</p>
                    <p class="card-text"><strong>Property Owner:</strong> @Html.DisplayFor(modelItem => item.PropertyOwner.FirstName)  @Html.DisplayFor(modelItem => item.PropertyOwner.FamilyName)</p>
                    <p class="card-text"><strong>Check-in Data:</strong> @Html.DisplayFor(modelItem => item.CheckinData)</p>
                    <p class="card-text"><strong>Checkout Data:</strong> @Html.DisplayFor(modelItem => item.CheckoutData)</p>
                    <p class="card-text"><strong>Details:</strong> @Html.DisplayFor(modelItem => item.Details)</p>
                    <p class="card-text">
                        <strong>Pets:</strong> @Html.DisplayFor(modelItem => item.Pets)
                        <span class="mx-2"></span>
                        <strong>Freezer:</strong> @Html.DisplayFor(modelItem => item.Freezer)
                        <span class="mx-2"></span>
                        <strong>Laundry Service:</strong> @Html.DisplayFor(modelItem => item.LaundryService)
                    </p>
                    <div>
                        @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @Class = "btn btn-secondary mb-2" }) |
                        @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @Class = "btn btn-info mb-2" }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @Class = "btn btn-danger mb-2" })
                    </div>
                </div>
            </div>
        </div>
    }
</div>
