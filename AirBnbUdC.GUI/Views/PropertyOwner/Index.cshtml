@model IEnumerable<AirBnbUdC.GUI.Models.Parameters.PropertyOwnerModel>

@{
    ViewBag.Title = "Index";
}

<h2>Propietarios</h2>

<p>
    @Html.ActionLink("Create New", "Create",null , new { @Class = "btn btn-primary mt-5 mb-3" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.FirstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FamilyName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Cellphone)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Photo)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr class="align-middle">
        <td>
            @Html.DisplayFor(modelItem => item.FirstName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FamilyName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Cellphone)
        </td>
        <td>
            <img src="@item.Photo" width="200px" height="200px"/>
        </td>
        <td>
            <div class="btn-group-vertical">
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @Class = "btn btn-secondary" }) <br />
                @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @Class = "btn btn-info" }) <br />
                @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @Class = "btn btn-danger" })
            </div>
        </td>
    </tr>
}

</table>
