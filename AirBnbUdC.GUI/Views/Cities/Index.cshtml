@model IEnumerable<AirBnbUdC.GUI.Models.Parameters.CityModel>

@{
    ViewBag.Title = "Index";
}

<h2>Ciudades</h2>
<br />
<a target="_blank" href="/Cities/GenerateReport?format=PDF" class="btn btn-success">Generar Reporte<i class="fas fa-file"></i></a>
<p>
    @Html.ActionLink("Crear Nueva", "Create", null, new { @Class = "btn btn-primary mt-5 mb-3" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Country.Id)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Country.Name)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id = item.Id }, new { @Class = "btn btn-secondary" }) |
            @Html.ActionLink("Detalles", "Details", new { id = item.Id }, new { @Class = "btn btn-info" }) |
            @Html.ActionLink("Eliminar", "Delete", new { id = item.Id }, new { @Class = "btn btn-danger" })
        </td>
    </tr>
}

</table>
